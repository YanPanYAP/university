@model IEnumerable<DAL_Celebrity_MSSQL.Celebrity>
@{
    ViewData["Title"] = "Все знаменитости";
}

<h1>Все знаменитости</h1>

<p>
    <a asp-action="NewHumanForm" class="btn btn-primary">Добавить новую знаменитость</a>
</p>

<div class="row">
    @foreach (var celebrity in Model)
    {
        <div class="col-md-3 mb-4 text-center">
            @Html.CelebrityFoto(celebrity, 200, 200)
            <p><strong>@celebrity.FullName</strong></p>
        </div>
    }
</div>